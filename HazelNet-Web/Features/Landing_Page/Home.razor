@page "/"
@layout HomeLayout

<PageTitle>Home</PageTitle>

<MudContainer MaxWidth="MaxWidth.Large" Class="pt-16 pb-12 text-center">
    
    <MudImage Fluid="true" Src="/Images/HazelNetLogo.svg" 
              Alt="HazelNet Logo" 
              Class="mx-auto d-block rounded-lg" 
              ObjectPosition="ObjectPosition.Center"/>
    
    <MudText Typo="Typo.h1" Class="mb-6" Align="Align.Center" Style="line-height: 1.1; font-size: 4.25rem; outline:none">
        Study smarter,<br/>
        <span style="background: linear-gradient(90deg, #3b82f6, #8b5cf6); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
            remember longer.
        </span>
    </MudText>

    <MudText Typo="Typo.body1" Color="Color.Default" Class="mx-auto mb-10"
             Style="max-width: 600px" Align="Align.Center">
        HazelNet is a web-based flashcard system built for structured learning.
        Create decks, study using spaced repetition, and track progress across devices.
    </MudText>

    <div class="d-flex justify-center gap-4 mb-16">
        <MudButton Variant="Variant.Filled" Color="Color.Primary" Size="Size.Large"
                   Style="border-radius: 16px; font-weight: 700; text-transform: none;" DisableElevation="true">
            Start Studying
        </MudButton>
        <MudButton Variant="Variant.Outlined" Color="Color.Default" Size="Size.Large" Class=" px-8 py-4"
                   Style="border-radius: 16px; font-weight: 700; text-transform: none;">
            Browse Public Decks
        </MudButton>
    </div>

    <!-- Learning Model -->
    <MudContainer MaxWidth="MaxWidth.Medium" Class="pa-5">
        
        <div class="d-flex flex-column align-center mb-10">
            <MudText Typo="Typo.overline" Color="Color.Primary">
                LEARNING MODEL
            </MudText>
            <MudText Typo="Typo.h2" Align="Align.Center">
                Spaced repetition, 
                <span style="background: linear-gradient(90deg, #3b82f6, #8b5cf6); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
                    with intent
                </span>
            </MudText>
            <MudText Typo="Typo.body1" Align="Align.Center" Class="py-3">
                HazelNet prioritizes cards you struggle with while spacing out mastered material. 
                This approach improves long-term retention without unnecessary repetition.
            </MudText>
        </div>
        
    </MudContainer>
    
    <!-- FlashCard Sample-->
    <MudPaper Elevation="20" Class="mx-auto pa-4" 
              Style="max-width: 1000px; border-radius: 20px;">
        <MudPaper Class="mx-auto pa-4 d-flex flex-column" Elevation="2"
                  Style="height: 450px; border-radius: 15px;">
            
            <div class="d-flex flex-row gap-1 ma-2">
                <MudAvatar Color="Color.Error" Style="height:12px; width:12px;"/>
                <MudAvatar Color="Color.Warning" Style="height:12px; width:12px;"/>
                <MudAvatar Color="Color.Success" Style="height:12px; width:12px;"/>
            </div>
            
            <MudPaper Class="d-flex justify-center align-center " Elevation="0" Style="height: 450px">
                <MudCard Outlined="true" Style="border-radius: 20px; height: 200px; width: 400px" Elevation="2">
                    <MudCardHeader>
                        <CardHeaderContent>
                            <MudText Typo="Typo.body2" Color="Color.Primary" Align="Align.Center">FLASHCARD</MudText>
                        </CardHeaderContent>
                    </MudCardHeader>
                    <MudCardContent>
                        <MudText Class="mb-5" Align="Align.Center" Color="Color.Dark" Typo="Typo.h3">
                            What is the time <br/>complexity of Merge Sort?
                        </MudText>
                        <MudSpacer/>
                        <MudDivider/>
                        <div class="d-flex flex-row gap-5 ma-5 align-center justify-center">
                            <MudAvatar Color="Color.Primary" Style="height:12px; width:12px;"/>
                            <MudAvatar Color="Color.Primary" Style="height:12px; width:12px;"/>
                            <MudAvatar Color="Color.Primary" Style="height:12px; width:12px;"/>
                        </div>
                    </MudCardContent>
                </MudCard>
            </MudPaper>
            
        </MudPaper>
    </MudPaper>
    
    <!--Feature Section-->
    <MudContainer Id="feature-section" 
        MaxWidth="MaxWidth.Medium" Class="pa-10 scroll-target">
    
        <div class="d-flex flex-column align-center mb-10">
            <MudText Typo="Typo.overline" Color="Color.Primary">
                FEATURES
            </MudText>
            <MudText Typo="Typo.h2" Align="Align.Center">
                Discover our App
            </MudText>
        </div>
        
        <MudStack Spacing="5">
            
            <!-- Create Decks-->
            <MudGrid Spacing="4" Class="mt-5" AlignItems="AlignItems.Center">
            
                <MudItem xs="12" md="5">
                    <MudStack Spacing="2">
                        <MudText Typo="Typo.h3" GutterBottom="true">
                            Deck Customization
                        </MudText>
                        <MudText Typo="Typo.body1" Style="line-height: 1.5;">
                            Your study space, your rules. 
                            Build custom decks for every course and
                            organize your materials to match exactly how your brain works.
                        </MudText>
                        <MudStack Spacing="2" Class="mt-4">
        
                            <div class="d-flex align-center">
                                <MudIcon Icon="@Icons.Material.Filled.CheckCircle" 
                                         Color="Color.Primary" 
                                         Size="Size.Medium" 
                                         Class="mr-3" />
                                <MudText Typo="Typo.body1">Group flashcards by subject or topic</MudText>
                            </div>

                            <div class="d-flex align-center">
                                <MudIcon Icon="@Icons.Material.Filled.CheckCircle" 
                                         Color="Color.Primary" 
                                         Size="Size.Medium" 
                                         Class="mr-3" />
                                <MudText Typo="Typo.body1">Easily rename, edit, or delete decks</MudText>
                            </div>

                            <div class="d-flex align-center">
                                <MudIcon Icon="@Icons.Material.Filled.CheckCircle" 
                                         Color="Color.Primary" 
                                         Size="Size.Medium" 
                                         Class="mr-3" />
                                <MudText Typo="Typo.body1">Keep your study materials organized</MudText>
                            </div>

                        </MudStack>
                    </MudStack>
                </MudItem>

                <MudItem xs="12" md="7">
                    <MudPaper Elevation="0" Class="d-flex align-center justify-center pa-4" 
                              Height="380px" Style= "border-radius: 12px; width: 100%;" >
                        <MudImage Src="/Images/DeckCreation.png" Fluid="true" Alt="App Screenshot" 
                                  ObjectFit="ObjectFit.Contain"
                                  Style="max-height: 100%; width: auto;"/>
                    </MudPaper>
                </MudItem>

            </MudGrid>
            
            <!-- Create Cards-->
            <MudGrid Spacing="4" Class="mt-5" AlignItems="AlignItems.Center">
                
                <MudItem xs="12" md="7">
                    <MudPaper Elevation="0" Class="d-flex align-center justify-center pa-4"
                              Height="380px" Style="border-radius: 12px; width: 100%">
                        <MudImage Src="/Images/CardCreation.png" Fluid="true" Alt="App Screenshot" 
                                  ObjectFit="ObjectFit.Contain" 
                                  Style="max-height: 100%; width: auto;"/>
                    </MudPaper>
                </MudItem>

                <MudItem xs="12" md="5">
                    <MudStack Spacing="2">
                        <MudText Typo="Typo.h3" GutterBottom="true">
                            Cards Creation
                        </MudText>
                        <MudText Typo="Typo.body1" Style="line-height: 1.5;">
                            Flashcards without the fuss. Capture concepts in seconds. 
                            HazelNet streamlines the setup so you can spend less time 
                            typing and more time mastering the material.
                        </MudText>
                        <MudStack Spacing="2" Class="mt-4">

                            <div class="d-flex align-center">
                                <MudIcon Icon="@Icons.Material.Filled.CheckCircle"
                                         Color="Color.Primary"
                                         Size="Size.Medium"
                                         Class="mr-3"/>
                                <MudText Typo="Typo.body1">Effortless add and edit flashcards</MudText>
                            </div>

                            <div class="d-flex align-center">
                                <MudIcon Icon="@Icons.Material.Filled.CheckCircle"
                                         Color="Color.Primary"
                                         Size="Size.Medium"
                                         Class="mr-3"/>
                                <MudText Typo="Typo.body1">Use clear question-and-answer formats</MudText>
                            </div>

                            <div class="d-flex align-center">
                                <MudIcon Icon="@Icons.Material.Filled.CheckCircle"
                                         Color="Color.Primary"
                                         Size="Size.Medium"
                                         Class="mr-3"/>
                                <MudText Typo="Typo.body1">Designed for effective spaced and repetition learning</MudText>
                            </div>

                        </MudStack>
                    </MudStack>
                </MudItem>

            </MudGrid>
            
            <!-- Check you stats-->
            <MudGrid Spacing="4" Class="mt-5" AlignItems="AlignItems.Center">
            
                <MudItem xs="12" md="5">
                    <MudStack Spacing="2">
                        <MudText Typo="Typo.h3" GutterBottom="true">
                            Progress Tracking
                        </MudText>
                        <MudText Typo="Typo.body1" Style="line-height: 1.5;">
                            Visualize your victory. Track your stats in real-time. 
                            HazelNet helps you spot weak points, celebrate strengths, 
                            and watch your knowledge grow.
                        </MudText>
                        <MudStack Spacing="2" Class="mt-4">
        
                            <div class="d-flex align-center">
                                <MudIcon Icon="@Icons.Material.Filled.CheckCircle" 
                                         Color="Color.Primary" 
                                         Size="Size.Medium" 
                                         Class="mr-3" />
                                <MudText Typo="Typo.body1">View study progress and recall accuracy</MudText>
                            </div>

                            <div class="d-flex align-center">
                                <MudIcon Icon="@Icons.Material.Filled.CheckCircle" 
                                         Color="Color.Primary" 
                                         Size="Size.Medium" 
                                         Class="mr-3" />
                                <MudText Typo="Typo.body1">Monitor review history and study patterns</MudText>
                            </div>

                            <div class="d-flex align-center">
                                <MudIcon Icon="@Icons.Material.Filled.CheckCircle" 
                                         Color="Color.Primary" 
                                         Size="Size.Medium" 
                                         Class="mr-3" />
                                <MudText Typo="Typo.body1">Identify topics that need more practice</MudText>
                            </div>

                        </MudStack>
                    </MudStack>
                </MudItem>

                <MudItem xs="12" md="7">
                    <MudPaper Elevation="0" Class="d-flex align-center justify-center pa-4" 
                              Height="380px" Style= "border-radius: 12px; width: 100%" >
                        <MudImage Src="/Images/Stats.jpg" Fluid="true" Alt="App Screenshot" 
                                  ObjectFit="ObjectFit.Contain"
                                  Style="max-height: 100%; width: auto;"/>
                    </MudPaper>
                </MudItem>

            </MudGrid>
        
        </MudStack>

        
    </MudContainer>
    
    
    <!--How it works-->
    <MudContainer Id="how-section"
        MaxWidth="MaxWidth.Medium" Class="pa-10 scroll-target" >
        
        <div class="d-flex flex-column align-center mb-10">
            <MudText Typo="Typo.overline" Color="Color.Primary">
                HOW IT WORKS
            </MudText>
            <MudText Typo="Typo.h2" Align="Align.Center">
                Get started with 
                <span style="background: linear-gradient(90deg, #3b82f6, #8b5cf6); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
                    three
                </span>
                simple step
            </MudText>
        </div>
        
        <MudGrid Spacing="5" Justify="Justify.Center" Class="my-10">
            <MudItem xs="12" sm="6" md="4">
                <MudCard Height="100%" Elevation="3" Class="pa-3" 
                         Style="border-radius: 10px">
                    <MudCardHeader>
                        <CardHeaderContent>
                            <MudText Typo="Typo.h3">Create</MudText>
                        </CardHeaderContent>
                        <CardHeaderActions>
                            <MudAvatar Color="Color.Primary" Size="Size.Small">1</MudAvatar>
                        </CardHeaderActions>
                    </MudCardHeader>
                    <MudCardContent>
                        Build decks with clear questions and answers. 
                        Organize cards using tags and structured content.
                    </MudCardContent>
                </MudCard>
            </MudItem>
            <MudItem xs="12" sm="6" md="4">
                <MudCard Height="100%" Elevation="3" Class="pa-3" 
                         Style="border-radius: 10px">
                    <MudCardHeader>
                        <CardHeaderContent>
                            <MudText Typo="Typo.h3">Study</MudText>
                        </CardHeaderContent>
                        <CardHeaderActions>
                            <MudAvatar Color="Color.Primary" Size="Size.Small">2</MudAvatar>
                        </CardHeaderActions>
                    </MudCardHeader>
                    <MudCardContent>
                        Review cards in focused sessions. 
                        Scheduling adapts to your performance over time.
                    </MudCardContent>
                </MudCard>
            </MudItem>
            <MudItem xs="12" sm="6" md="4">
                <MudCard Height="100%" Elevation="3" Class="pa-3"
                         Style="border-radius: 10px">
                    <MudCardHeader>
                        <CardHeaderContent>
                            <MudText Typo="Typo.h3">Improve</MudText>
                        </CardHeaderContent>
                        <CardHeaderActions>
                            <MudAvatar Color="Color.Primary" Size="Size.Small">3</MudAvatar>
                        </CardHeaderActions>
                    </MudCardHeader>
                    <MudCardContent>
                        Track accuracy, review history, and weak topics using built-in statistics.
                    </MudCardContent>
                </MudCard>
            </MudItem>
        </MudGrid>
        
    </MudContainer>

   

</MudContainer>
