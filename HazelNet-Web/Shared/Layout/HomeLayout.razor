@using MudBlazor
@inherits LayoutComponentBase

<MudThemeProvider Theme="@_theme" IsDarkMode="_isDarkMode" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1" Dense="true" Class="pa-4" Style="backdrop-filter: blur(10px);">
        <MudContainer MaxWidth="MaxWidth.Large" Class="d-flex align-center">
            
            <MudLink Href="/" Typo="Typo.h1" Color="Color.Primary" Underline="Underline.None"
                     Style="font-size: 1.5rem; font-weight: 800; cursor: pointer; outline:none">
                HazelNet
            </MudLink>

            <MudSpacer />

            <div class="d-none d-md-flex">
                <MudLink Typo="Typo.body2" Href="/#how-section" Color="Color.Default" Underline="Underline.None" Class="mx-4 nav-link">How it works</MudLink>
                <MudLink Typo="Typo.body2" Href="/#feature-section" Color="Color.Default" Underline="Underline.None" Class="mx-4 nav-link">Features</MudLink>
                <MudLink Typo="Typo.body2" Href="/About" Color="Color.Default" Underline="Underline.None" Class="mx-4 nav-link">About</MudLink>
            </div>

            <MudSpacer />

            <div class="d-flex align-center">
                <MudLink Typo="Typo.button" Color="Color.Default" Underline="Underline.None" 
                         Class="mx-4" Style="font-weight: 600">Log in</MudLink>
                
                <MudButton Variant="Variant.Filled" 
                           Class="px-6"
                           Color="Color.Primary" 
                           Style="border-radius: 8px; text-transform: none;"
                           Size="Size.Medium" 
                           DropShadow="false">
                    Get Started
                </MudButton>
            </div>

        </MudContainer>
    </MudAppBar>
    
    <MudMainContent>
        @Body
        
        <MudContainer MaxWidth="MaxWidth.Large" Class="py-12 mt-16 border-t border-solid mud-border-lines-default">
            <div class="d-flex flex-column flex-md-row align-center justify-space-between">
                <MudText Typo="Typo.button" Class="font-bold">HAZELNET</MudText>
                <MudText Typo="Typo.body2" Color="Color.Info">© 2025-2026 Academic Web Project</MudText>
                
                <MudStack Row="true" Spacing="0">
                    <MudLink Href="https://github.com/Zanpakuto/Hazelnet_Web">
                        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Size="Size.Small"/>
                    </MudLink>
                <!--
                    <MudIconButton Icon="@Icons.Custom.Brands.Facebook" Size="Size.Small"/>
                    <MudIconButton Icon="@Icons.Custom.Brands.LinkedIn" Size="Size.Small"/>
                    -->
                </MudStack>
                
            </div>
        </MudContainer>
    </MudMainContent>
</MudLayout>

<style>
    /* Subtle hover effect for a "premium" feel */
    .nav-link {
        transition: color 0.3s ease;
        font-weight: 500;
    }
</style>


@code {
    private bool _isDarkMode = false;
    private MudTheme? _theme = null;

    protected override void OnInitialized()
    {
        base.OnInitialized();

        _theme = new()
        {
            PaletteLight = _lightPalette,
            PaletteDark = _darkPalette,
            Typography = _typography,
            LayoutProperties = new LayoutProperties()
        };
    }

    private void DarkModeToggle()
    {
        _isDarkMode = !_isDarkMode;
    }

    private readonly PaletteLight _lightPalette = new()
    {
        Primary = "#7e6fff", // Keep brand color consistent
        Surface = "#ffffff",
        Background = "#fcfcfd", // Slightly off-white to make white cards "pop"
        AppbarBackground = "rgba(255,255,255,0.8)",
        AppbarText = "#424242",
        DrawerBackground = "#ffffff",
        TextPrimary = "#110e2d",
        TextSecondary = "#67667a",
        Success = "#2d9d78", // Slightly deeper for white backgrounds
        Error = "#e64646",
        Divider = "#e8e8e8",
    };

    private readonly PaletteDark _darkPalette = new()
    {
        Primary = "#7e6fff",
        Surface = "#1e1e2d",
        Background = "#1a1a27",
        BackgroundGray = "#151521",
        AppbarText = "#92929f",
        AppbarBackground = "rgba(26,26,39,0.8)",
        DrawerBackground = "#1a1a27",
        ActionDefault = "#74718e",
        ActionDisabled = "#99994d",
        ActionDisabledBackground = "#605f6d",
        TextPrimary = "#b2b0bf",
        TextSecondary = "#92929f",
        TextDisabled = "#ffffff33",
        DrawerIcon = "#92929f",
        DrawerText = "#92929f",
        GrayLight = "#2a2833",
        GrayLighter = "#1e1e2d",
        Info = "#4a86ff",
        Success = "#3dcb6c",
        Warning = "#ffb545",
        Error = "#ff3f5f",
        LinesDefault = "#33323e",
        TableLines = "#33323e",
        Divider = "#292838",
        OverlayLight = "#1e1e2d80",
    };

    private readonly Typography _typography = new()
    {
        Default = new DefaultTypography()
        {
            // Source Sans is a "Workhorse" font used by government and educational sites
            FontFamily = new[] { "Source Sans 3", "Helvetica", "Arial", "sans-serif" },
            FontSize = ".9375rem", // Slightly larger (15px) for easier reading
            LineHeight = "1.6", // More "breathing room" between lines
            LetterSpacing = "0"
        },
        H1 = new H1Typography() { FontFamily = new[] { "Plus Jakarta Sans", "sans-serif" }, FontWeight = "800", FontSize = "2.75rem" },
        H2 = new H2Typography() { FontFamily = new[] { "Plus Jakarta Sans", "sans-serif" }, FontWeight = "600", FontSize = "1.75rem" },
        H3 = new H3Typography() { FontFamily = new[] { "Plus Jakarta Sans" }, FontWeight = "600", FontSize = "1.25rem" },
        H4 = new H4Typography() { FontFamily = new[] { "Plus Jakarta Sans" }, FontWeight = "500", FontSize = "1.1rem" },
        H6 = new H6Typography() { 
            FontFamily = new[] { "Plus Jakarta Sans" }, 
            FontWeight = "600", 
            TextTransform = "uppercase", 
            FontSize = ".75rem", 
            LetterSpacing = ".05em" 
        },
        Button = new ButtonTypography()
        {
            FontFamily = new[] { "Plus Jakarta Sans", "sans-serif" },
            FontWeight = "400",
            TextTransform = "none", // Uppercase here feels more formal/official
            LetterSpacing = ".1em"
        },
        Body1 = new Body1Typography()
        {
            FontSize = "1rem",
            LineHeight = "1.6"
        },

        Body2 = new Body2Typography()
        {
        FontSize = ".875rem", // 14px
        LineHeight = "1.5", // Slightly tighter than Body1, but still readable
        LetterSpacing = ".01em",
        FontWeight = "400"
        }  
    };

    public string DarkLightModeButtonIcon => _isDarkMode switch
    {
        true => Icons.Material.Rounded.LightMode,
        false => Icons.Material.Outlined.DarkMode,
    };


}
